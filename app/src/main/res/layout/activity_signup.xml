<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="8"
        android:id="@+id/container"
        tools:context=".singup.signup">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DaakYou"
            android:textColor="@color/orange"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/chunkfive"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:layout_marginLeft="50dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/user"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/user"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="Full Name"
            android:drawablePadding="-30dp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:textColorHint="@color/grey"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/pass"
            android:drawableStart="@drawable/pass"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="Password"
            android:drawablePadding="-25dp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:visibility="gone"
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/smartphone_call"
            android:drawableStart="@drawable/smartphone_call"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/grey"
            android:gravity="center"
            android:hint="Phone"
            android:drawablePadding="-30dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="actions"
            android:visibility="gone"
            android:textColor="#fcf2f2"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:background="@drawable/btn1"
            android:layout_marginTop="30dp"
            android:text="CONTINUE"/>

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:textSize="20dp"
            android:text="Already have an account?"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:textSize="20dp"
            android:layout_marginRight="75dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:textColor="#776ff2"
            android:text="LOGIN"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/smartphone_call"
            android:drawableStart="@drawable/smartphone_call"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="Enter OTP"
            android:textColorHint="@color/grey"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_marginRight="85dp"
            android:layout_marginLeft="85dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:onClick="actions"
            android:textColor="#fcf2f2"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:background="@drawable/btn1"
            android:layout_marginTop="30dp"
            android:text="SIGNUP"/>





    </LinearLayout>

</ScrollView>
