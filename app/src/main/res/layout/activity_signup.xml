<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/loginback"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:id="@+id/container"
        tools:context=".MainActivity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DaakYou"
            android:textColor="#faeeee"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/chunkfive"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/user"
            android:drawableStart="@drawable/user"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="MY NAME IS ABHISHEK"
            android:drawablePadding="-30dp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/pass"
            android:drawableStart="@drawable/pass"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="Password"
            android:drawablePadding="-25dp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/smartphone_call"
            android:drawableStart="@drawable/smartphone_call"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="Phone"
            android:drawablePadding="-30dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="actions"
            android:textColor="#fcf2f2"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:background="@drawable/btn1"
            android:layout_marginTop="30dp"
            android:text="CONTINUE"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:text="Already have an account?"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:textSize="20dp"
            android:layout_marginRight="75dp"
            android:layout_weight="1"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/josefinsanssemibolditalic"
            android:textColor="#faeeee"
            android:text="LOGIN"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>






    </LinearLayout>

</ScrollView>
